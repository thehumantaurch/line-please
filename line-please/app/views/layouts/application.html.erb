<!DOCTYPE html>
<html>
<head>
  <title>LinePlease</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if session[:user_id] %>
    <%= link_to "Sign Out", session_path(session[:user_id]), method: :delete %>
  <% else %>
    <%= link_to "Sign In", new_session_path %>
  <% end %>

<%= yield %>

</body>
</html>
